{
  "nom": "État de mal épileptique",
  "description": "Prise en charge de l'état de mal épileptique chez l'enfant",
  "etapes": [
    {
      "titre": "Mesures générales immédiates",
      "elements": [
        {
          "type": "texte",
          "texte": "• A libération des VAS, PLS si possible\n• B 02 au MHC (QSP Sat >95%)\n• C Pose de VVP\n• D Dextro et Température"
        }
      ],
      "temps": "T0",
      "attention": "Ne jamais forcer l'ouverture de la bouche pendant la crise"
    },
    {
      "titre": "BZD première dose",
      "elements": [
        {
          "type": "texte",
          "texte": "si pas de voie disponible"
        },
        {
          "type": "medicament",
          "medicament": {
            "nom": "Midazolam",
            "indication": "Convulsions",
            "voie": "Intranasale"
          }
        },
        {
          "type": "texte",
          "texte": "si voie disponible"
        },
        {
          "type": "medicament",
          "medicament": {
            "nom": "Clonazépam injectable",
            "indication": "Benzodiazépine anticonvulsivante",
            "voie": ""
          }
        }
      ],
      "temps": "à 5 min",
      "attention": "Privilégier la voie IV si disponible"
    },
    {
      "titre": "BZD 2e dose",
      "elements": [
        {
          "type": "medicament",
          "medicament": {
            "nom": "Clonazépam injectable",
            "indication": "Benzodiazépine anticonvulsivante",
            "voie": ""
          }
        }
      ],
      "temps": "à 10 minutes"
    },
    {
      "titre": "Anti épileptique 2e ligne",
      "elements": [
        {
          "type": "medicament",
          "medicament": {
            "nom": "Phénytoïne",
            "indication": "Dose de charge",
            "voie": ""
          }
        }
      ],
      "temps": "à 15 minutes"
    }
  ]
